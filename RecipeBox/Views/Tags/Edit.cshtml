 @model RecipeBox.Models.Tag

<h2>Edit this Tag</h2>

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.TagId)

  @Html.LabelFor(model => model.TagName)
  @Html.TextBoxFor(model => model.TagName)

  @Html.Label("Select a Recipe")
  @Html.DropDownList("RecipeId")

  <input type="submit" value="Submit" class="btn btn-default" />
}

<p>@Html.ActionLink("Back to Tag List", "Index")</p>