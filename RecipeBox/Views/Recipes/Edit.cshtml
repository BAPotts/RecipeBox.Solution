 @model RecipeBox.Models.Recipe

<h2>Edit this Recipe</h2>

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.RecipeId)

  @Html.LabelFor(model => model.RecipeName)
  @Html.TextBoxFor(model => model.RecipeName)

  @Html.LabelFor(model => model.RecipeIngredients)
  @Html.TextBoxFor(model => model.RecipeIngredients)

  @Html.LabelFor(model => model.RecipeInstructions)
  @Html.TextBoxFor(model => model.RecipeInstructions)


  @Html.Label("Select a Tag")
  @Html.DropDownList("TagId")

  <input type="submit" value="Submit" class="btn btn-default" />
}

<p>@Html.ActionLink("Back to Recipe List", "Index")</p>